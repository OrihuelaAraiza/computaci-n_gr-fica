{
  "version": 4,
  "configurations": [
    {
      "name": "macOS",
      "intelliSenseMode": "macos-clang-arm64",
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "includePath": [
        "${workspaceFolder}/**",
        "/opt/homebrew/opt/opencv/include/opencv4"
